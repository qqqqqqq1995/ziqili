/* components/headerNavbar.wxss */
.navbar-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 9999999;
  background-color: white;
  box-sizing: border-box;
}
.navbar-text {
  text-align: center;
  font-size: 36rpx;
  color: #333333;
  font-weight: 600;
  /* 超出一行文字自动隐藏 */
  overflow:hidden;
  /* 文字隐藏后添加省略号 */
  text-overflow:ellipsis;
  /* 强制不换行 */
  white-space:nowrap;
  width:300rpx;
  margin-left:225rpx
}
.navbar-icon {
 position: fixed;
 display: flex;
 border-radius: 64rpx;
 border: 0.5px solid #f4f4f4;
 box-sizing: border-box;
}
.navbar-icon image {
 height: 20px;
 width: 20px;
 padding: 5px 10px 10px;
 display: inline-block;
 overflow: hidden;
}
.navbar-icon view {
 height: 18px;
 border-left: 0.5px solid #f4f4f4;
 margin-top: 6px;
}
.navbar-loading {
 background: #fff;
 text-align: center;
}