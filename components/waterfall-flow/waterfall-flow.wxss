.list-container {
  display: flex;
  flex-direction: row;
  padding: 0 40rpx 100rpx;
}
.list-side-box {
  display:flex;
  flex:1;
  flex-direction:column;
}

.list-side-box {
  margin-right: 40rpx;
}

.list-side-box:last-child {
  margin-right: 0;
}

.list-item {
  padding-bottom: 40rpx;
}

.list-item image {
  width: 100%;
}
.list-item text {
  font-weight:600;
  display:block;
  font-size:25rpx;
  line-height:30rpx;
}