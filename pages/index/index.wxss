.search-input {
  height:95rpx;
  background-color:#f8f8f8;
  font-size:40rpx;
  text-align:center;
  line-height:95rpx;
  margin:20rpx 40rpx;
  color:#717171;
}

.title {
  /* 超出一行文字自动隐藏 */
  overflow:hidden;
  /* 文字隐藏后添加省略号 */
  text-overflow:ellipsis;
  /* 强制不换行 */
  white-space:nowrap;
  display:block;
}